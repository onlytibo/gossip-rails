            <%= link_to "Mon profil", profiles_path,class:"nav-link" %>
          </li><%end%>
          <%unless logged_in?%><li class="nav-item">
            <%= link_to "S'inscrire", new_user_path, class:"nav-link" %>
          </li><%end%>
          <%unless logged_in?%><li class="nav-item">
            <%= link_to "Se connecter", new_session_path, class:"nav-link" %>
          </li><%end%>
          <%if logged_in?%><li class="nav-item">
            <%= link_to "Se dÃ©connecter", session_path(session.id), method: :delete,class:"nav-link" %>
