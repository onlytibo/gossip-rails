<% @comments.each do |c| %>
  <div class="row mb-2">
        <div class="col-8 offset-2">
            <div class="card card-white post">
                <div class="post-heading">
                    <div class="float-left image">
                        <img src="http://bootdey.com/img/Content/user_1.jpg" class="img-circle avatar" alt="user profile image">
                    </div>
                    <div class="float-left meta">
                        <div class="title h5">
                            <b><%= link_to "#{c.user.first_name}", user_path(c.user.id) %></b>
                            comments.
                        </div>
                        <h6 class="text-muted time"><%=c.created_at%></h6>
                        <% if current_user == c.user %><span style="color:#dc3545 !important;"><b><%= link_to "Delete", gossip_comment_path(c.gossip_id, c.id), method: :delete %><%end%></b></span>
                    </div>
                </div> 
                <div class="post-description"> 
                    <p><%= c.comment %></p>

                </div>
            </div>
        </div>
        
    </div>
  

<%end%>


<div class="container">
    
</div>