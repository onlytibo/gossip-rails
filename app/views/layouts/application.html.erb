        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <%= link_to "Tous les gossips", root_path, class:"nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Tous les auteurs", users_path, class:"nav-link" %>
