<%= form_tag url_for(action: 'create'), method: "post", :class => 'form-group'  do %>

      <%= label_tag 'Gossip title' %>
      <%= text_field_tag 'title', nil, class:'form-control' %>
      <br /> 

      <%= label_tag 'Gossip content' %>
      <%= text_area_tag 'content', nil, class:'form-control' %>
      <br /> 
      <%= submit_tag "Create Gossip", class:"btn btn-primary" %>

    <% end %>



